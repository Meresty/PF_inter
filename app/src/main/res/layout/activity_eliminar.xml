<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Eliminar"
    android:background="@color/gris">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/verde"
        >
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selecciona_la_nota_que_quieras_eliminar"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/Boton_Elim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btelimnar"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:layout_margin="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:backgroundTint="@color/verdeF"
        android:onClick="Eliminar_Boton"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        />

</LinearLayout>